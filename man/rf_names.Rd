        stop("use the argument 'df=F' to use on non-data frame names")
    x <- trimws(x)
    x <- gsub("([a-z])([A-Z])", "\\1_\\2", x)
    x <- gsub("[[:punct:] ]", "_", x)
    x <- gsub("_+", "_", x)
    x <- gsub("^_|_$", "", x)
    x <- tolower(x)
  }
}
